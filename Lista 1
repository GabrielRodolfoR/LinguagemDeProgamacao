Lista 8

A = float(input("Digite o valor de A: "))
B = float(input("Digite o valor de B: "))
C = float(input("Digite o valor de C: "))

maior = A
if(maior<B):
    maior = B
if(maior<C):
    maior = C
print(maior,"é o maior valor")

menor = A
if(menor>B):
    menor = B
if(menor>C):
    menor = C
print(menor,"é o menor valor")

media = (A + B + C) / 3
print("A média dos 3 números é:",media)

