Lista 9

nome = input("Digite o nome do cliente: ")
media = float(input("Digite o saldo médio do cliente: "))

if((media>=0) and (media<=2000)):
    print("Não possui saldo para credito")
elif((media>=2001) and (media<=4000)):
    media = media*1.05
    print(nome,",",media)
elif((media>=4001) and (media<6000)):
    media = media*1.1
    print(nome,",",media)
elif(media>=6000):
    media = media*1.1
    print(nome,",",media)
else:
    print("Saldo Inválido")
    
