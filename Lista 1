Lista 1

nome = input("Digite seu nome: ")
funcao = input("Digite sua função: ")
idade = int(input("Digite sua idade: "))
sal = float(input("Digite seu salario: "))
sexo = input("Digite seu sexo: ")
numfil = input("Digite seu número de filho(s): ")
estciv = input("Digite seu estado civil: ")

print("Nome:",nome, "Fução:",funcao, "idade:",idade, "sal:",sal, "sexo:",sexo,"NºFilhos:", numfil, "estado civil:",estciv)

